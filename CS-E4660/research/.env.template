# Environment Configuration Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to git!

# =============================================================================
# API KEYS (Required for Claude SDK approach)
# =============================================================================

# Anthropic API Key
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# MODEL CONFIGURATION (Optional)
# =============================================================================

# Model cache directory (for Arcee Agent)
MODEL_CACHE_DIR=./model-cache

# Default model for Claude SDK
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Device for Arcee Agent (cuda or cpu)
DEVICE=cuda

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=./logs

# =============================================================================
# APPLICATION SETTINGS (Optional)
# =============================================================================

# Maximum tokens for responses
MAX_TOKENS=4000

# Temperature for model generation
TEMPERATURE=0.7

# Maximum iterations for agentic loops
MAX_ITERATIONS=10

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================

# Enable debug mode
DEBUG=False

# Enable verbose logging
VERBOSE=False

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. This file should be in .gitignore - NEVER commit API keys!
# 2. Create separate .env files for different environments:
#    - .env.development
#    - .env.testing  
#    - .env.production
# 3. Set file permissions: chmod 600 .env
# 4. Validate your API key before running agents
#
